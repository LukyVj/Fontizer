{
  "compilerOptions": {
    "outDir": "./lib",
    "lib": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "preserve",
    "typeRoots": ["index.d.ts", "@emotion/react"],
    "types": ["@emotion/react/types/css-prop"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
